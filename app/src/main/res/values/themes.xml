<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimaryDark">@color/light_primary_color_dark</item>
        <item name="colorAccent">@color/light_accent_color</item>
        <item name="colorReadState">@color/light_read_state</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/list_activated_background_light
        </item>
    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_dark</item>
        <item name="colorAccent">@color/dark_accent_color</item>
        <item name="colorReadState">@color/dark_read_state</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background_dark
        </item>
    </style>

    <style name="AppTheme.MaterialAboutActivity" parent="Theme.Mal.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimaryDark">@color/light_primary_color_dark</item>
        <item name="colorAccent">@color/light_accent_color</item>
    </style>

    <style name="AppTheme.DarkMaterialAboutActivity" parent="Theme.Mal.Dark">
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_dark</item>
        <item name="colorAccent">@color/dark_accent_color</item>
    </style>

    <style name="Theme.Slidr.Light" parent="Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Slidr.Dark" parent="Theme.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
